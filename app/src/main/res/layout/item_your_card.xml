<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/chbSecim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_your_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/chbSecim"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pd_image" />

    <TextView
        android:id="@+id/txtBasliq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_your_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRengi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_your_card"
        app:layout_constraintTop_toBottomOf="@+id/txtBasliq" />

    <TextView
        android:id="@+id/txtQiymeti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_your_card"
        app:layout_constraintTop_toBottomOf="@+id/txtRengi" />

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/trash"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_pilus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/btn_border"
        android:scaleType="fitXY"
        android:src="@drawable/ic_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSay"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="69dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_pilus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_minus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_pilus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_border"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toStartOf="@+id/iv_remove"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtSay"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>