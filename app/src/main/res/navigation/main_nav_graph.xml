    <fragment
        android:id="@+id/historyFragment"
        android:name="com.nexis.shopsmart.ui.history.HistoryFragment"
        android:label="History Fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.nexis.shopsmart.ui.profile.ProfileFragment"
        android:label="Profile Fragment" />
