        android:id="@+id/wishlistFragment"
        android:name="com.nexis.shopsmart.ui.wishlist.WishlistFragment"
        android:label="Wishlist Fragment" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.farzin.shopsmart.ui.details.ProductDetailsFragment"
        android:label="Details Product" >
    </fragment>
    <fragment
        android:id="@+id/yourCardFragment2"
        android:name="com.nexis.shopsmart.ui.your_card.YourCardFragment"
        android:label="YourCardFragment" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.nexis.shopsmart.ui.add_product.AddProductFragment"
        android:label="Yeni məhsul əlavə et"
